<div class="clearfix"></div>
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Zapomniałeś swojego hasła?</h3>
    <p>Wyślemy Ci instrukcje do zmiany hasła.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
     <%= f.submit 'Resetuj hasło', :class => 'button right' %>
  <% end %>
</div>
