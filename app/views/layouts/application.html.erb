          <li><%= link_to 'Aktualności', root_path, class: 'navbar-brand' %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-brand" data-toggle="dropdown">Klub <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Historia</a></li>
              <li><a href="#">Historia</a></li>
              <li><a href="#">Historia</a></li>
            </ul>
          </li>
          <li><%= link_to 'Galeria', root_path, class: 'navbar-brand'  %></li>
          <li><%= link_to 'Rejsy', root_path, class: 'navbar-brand'  %></li>
          <li><%= link_to 'Patenty', root_path, class: 'navbar-brand'  %></li>
          <li><%= link_to 'Kontakt', root_path, class: 'navbar-brand' %></li>
        </ul>
      </div>

  </nav>
</div>

  <%= yield %>

<!-- Footer -->
<hr>
    <footer>
      <div class="row">
        <div class="well">
          <div style="padding-left: 10px">
            <%= render 'layouts/nav_links_for_auth' %>
          </div>
        </div>
      </div>
      <div class="row well">
        <div class="col-lg-12">
          <p>Powered by Seweryn Panek 2016</p>
          <p>Administrated by <a href="https://www.facebook.com/karina.tomalik">Karina Tomalik</a></p>
        </div>
      </div>
    </footer>
</body>
</html>
